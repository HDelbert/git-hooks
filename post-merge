#!/bin/sh
#
# To enable this hook, rename this file to "post-merge".

echo "Post Merge"
changed_files=(`git diff-tree -r --name-status ORIG_HEAD HEAD`)

p4_initialize() {
    echo "p4 set P4CLIENT=$1"
}

p4_revert_unchanged() {
    echo "p4 revert -a"
}

p4_add() {
    echo "p4 add $1"
}

p4_delete() {
    echo "p4 delete $1"
}

p4_modify() {
    echo "p4 edit $1"
}

p4_submit() {
    echo "p4 submit"
}

add_files=""
del_files=""
mod_files=""

collect_source() {
    local action=0
    for tag in ${changed_files[@]}
    do
        case ${tag} in
            M) action=0;;
            A) action=1;;
            D) action=2;;
            *)
                case ${action} in
                    0) mod_files+="${tag}";;
                    1) add_files+="${tag}";;
                    2) del_files+="${tag}";;
                    *) echo "No action";;
                esac
                ;;
        esac
    done
}

p4_open_source() {
    if [ "${add_files}" != "" ]; then
        p4_add ${add_files}
    fi

    if [ "${del_files}" != "" ]; then
        p4_delete ${del_files}
    fi

    if [ "${mod_files}" != "" ]; then
        p4_modify ${mod_files}
    fi
}

_main() {
    # Todo for user login etc..
    p4_initialize "OpenHMI_Native_MeHu_HISHL061_share"

    collect_source

    p4_open_source 
    p4_revert_unchanged
    p4_submit
}

_main

#length_file=${#changed_files[@]}

